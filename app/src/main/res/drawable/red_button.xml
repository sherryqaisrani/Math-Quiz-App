<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true"
        >
        <shape
            >
            <solid
                android:color="@color/red"
                />
            <stroke
                android:width="1sp"
                android:color="@color/light_red"
                />
            <corners
                android:radius="3dp"
                />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffef4444"
                android:endColor="#ff992f2f"
                android:angle="270.0"
                />
            <stroke
                android:width="1sp"
                android:color="@color/light_red"
                />
            <corners
                android:radius="3sp"
                />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                />
        </shape>

    </item>

</selector>