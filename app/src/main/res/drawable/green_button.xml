<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <shape>
            <solid
                android:color="@color/green"
                />
            <stroke
                android:width="1sp"
                android:color="@color/light_green"
                />
            <padding
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp"
                android:top="10dp"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/light_green"
                android:angle="270.0"
                />
            <stroke
                android:width="1sp"
                android:color="@color/light_green"
                />
            <corners
                android:radius="4sp"
                />
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                />
        </shape>
    </item>
</selector>